    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="text_20_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_20_666666_sdw" parent="@style/sdw_white">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="HomeButtonTextStyle">
        <item name="android:textSize">@dimen/homeTextViewSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="HomeConstraintLayoutItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_layout_selected</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/homeLayoutButtonHeight</item>
        <item name="android:paddingTop">@dimen/homeLayoutPadding</item>
        <item name="android:paddingBottom">@dimen/homeLayoutPadding</item>
    </style>

    <style name="HomeRelativeLayoutStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_layout_selected</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/homeLayoutPadding</item>
        <item name="android:paddingBottom">@dimen/homeLayoutPadding</item>
    </style>

    <style name="HomeIconImageViewStyle">
        <item name="android:layout_marginEnd">@dimen/homeImageViewMargin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_negative_button_style">
        <item name="android:shadowColor">#7FFFFFFF</item>
        <item name="android:textSize">@dimen/dialogButtonTextSize</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#3E3E3E</item>
        <item name="android:layout_marginTop">@dimen/dialogButtonMargin</item>
        <item name="android:layout_marginBottom">@dimen/dialogButtonMargin</item>
    </style>

    <style name="dialog_positive_button_style">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/dialogButtonTextSize</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_marginTop">@dimen/dialogButtonMargin</item>
        <item name="android:layout_marginBottom">@dimen/dialogButtonMargin</item>
    </style>

    <style name="long_click_button_list_text_style">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textSize">@dimen/dialogTitleTextSize</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="dialog_message_style">
        <item name="android:textSize">@dimen/dialogMessageTextSize</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="ProgressDialogStyle" >
        <item name="android:textSize">17sp</item>
    </style>
    <style name="buttonTextViewStyle">
        <item name="android:background">@drawable/selector_layout_selected</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/videoTypeBtnHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

<!--    &lt;!&ndash;空白&ndash;&gt;
